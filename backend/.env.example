# Backend environment variables
# Copy this file to `.env` and fill in the values. Do NOT commit `.env`.

############################
## Required (must be set) ##
############################

# Groq API key for LLM access
GROQ_API_KEY=your_groq_api_key_here

#############################
## Recommended for prod    ##
#############################

# Allowed frontend origins for CORS (comma-separated).
# Example:
# CORS_ORIGINS=https://your-frontend.onrender.com
# Leave unset to allow all origins (not recommended for public prod).
# CORS_ORIGINS=

#############################
## Model configuration     ##
#############################

# Groq LLM model name (default: llama-3.1-8b-instant)
GROQ_LLM_MODEL=llama-3.1-8b-instant

# Sentence embedding model (default: all-MiniLM-L6-v2)
EMBEDDING_MODEL=all-MiniLM-L6-v2

#############################
## Vector store / ChromaDB ##
#############################

CHROMA_COLLECTION_NAME=documents
CHROMA_PERSIST_DIR=./data/vector_store

#############################
## RAG chunking            ##
#############################

CHUNK_SIZE=1000
CHUNK_OVERLAP=200

#############################
## Domain & generation     ##
#############################

DOMAIN=devcansol
DOMAIN_PROMPT=You are an AI assistant for Devcansol Private Limited. Answer only using the provided context.
MAX_CONTEXT=3000
TEMPERATURE=0.7
MAX_TOKENS=1024

#############################
## Data loading            ##
#############################

DATA_DIR=./data

#############################
## Server                  ##
#############################

HOST=0.0.0.0
PORT=8000